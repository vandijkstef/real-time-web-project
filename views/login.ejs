<%- include _header %>
<div class="flex">
	<%- include _sidebar %>
	<main>
		<% if (locals.user) { %>
			<p>logged in as <%- user.name %></p>
		<% } else if (locals.clientID) { %>
			<p>login page</p>
			<a href="https://github.com/login/oauth/authorize?client_id=<%- clientID %>&allow_signup=false">Login with Github</a>
		<% } %>
		<% if (locals.error) { %>
			<p><%- error %></p>
		<% } %>
	</main>
</div>
<%- include _footer %>