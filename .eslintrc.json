{
	"parserOptions": {
		"sourceType": "module"
	},
    "env": {
		"node": true,
		"es6": true,
		"browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-console": 0,
		"strict": [
			"error",
			"global"
		],
		"sourceType": "module",
		"no-var": "error",
		"require-await": "error"
    }
}